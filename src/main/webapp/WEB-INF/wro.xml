<groups xmlns="http://www.isdc.ro/wro">
	<group name="controllers">
		<js>/app/scripts/controllers/*.js</js>
	</group>
	<group name="directives">
		<js>/app/scripts/directives/*.js</js>
	</group>
	<group name="services">
		<js>/app/scripts/services/*.js</js>
	</group>
	<group name="app">
		<css>/app/styles/common.css</css>
		<js>/app/scripts/app.js</js>
	</group>
	<group name="all">
		<group-ref>app</group-ref>
		<group-ref>services</group-ref>
		<group-ref>directives</group-ref>
		<group-ref>controllers</group-ref>
	</group>
</groups>
